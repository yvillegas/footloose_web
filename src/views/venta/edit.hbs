<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITAR VENTA</h3>
                </div>
                <div class="card-body">
                    <form action="/ventas/edit/{{venta.idVenta}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Fecha</label>
                            <input class="form-control" type="date" name="fechaVenta" id="fechaVenta"
                                value="{{venta.fecha_formateada}}" placeholder="Ejemplo: 12-12-21" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Cliente</label>
                            <select class="form-control" name="idUsuario" id="idUsuario">
                                <option value="{{venta.idUsuario}}">{{venta.name}}</option>
                                {{#each usuario}}
                                <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{!-- <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Total</label>
                            <input class="form-control" type="text" name="totalVenta" id="totalVenta"
                                value="{{venta.totalVenta}}" placeholder="Ejemplo: 100.00" autofocus required>
                        </div> --}}
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>