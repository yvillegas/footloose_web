<div class="container">
    <div class="row mt-5">
        <h3 class="text-end m-0"> <a href="/tallas/add" class="btn btn-dark">AGREGAR</a></h3>
        <h3 class="text-center text-uppercase p-2">Lista de tallas</h3>
        {{#if talla}}
        <table class="table text-center">
            <thead>
                <tr class="table-light">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each talla}}
                <tr>
                    <td>{{nombreTalla}}</td>
                    <td>
                        <div class="btn-group">
                            <a href="/tallas/edit/{{idTalla}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i></a>
                            <a href="/tallas/delete/{{idTalla}}" onclick="return confirm('Seguro que desea eliminar?')"
                                class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>Debes crear una talla</h3>
        </div>
        <div class="card-body">
            <p>Presiona este boton para que puedas crear una talla</p>
            <a href="/tallas/add" class="btn btn-primary">Ir a crear</a>
        </div>
        {{/if}}
    </div>
</div>