<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITAR MODELO</h3>
                </div>
                <div class="card-body">
                    <form action="/modelos/edit/{{modelo.idModelo}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombreModelo" id="nombreModelo"
                                value="{{modelo.nombreModelo}}" placeholder="Ejemplo: Modelo 1" autofocus required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>